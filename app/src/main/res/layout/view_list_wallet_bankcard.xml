<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_12"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/wallet_list_bankcard_bgcolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_113"
        android:background="@drawable/wallet_bankcard_green"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wallet_list_bankcard_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@drawable/oval_bankcard_wthit"
            android:padding="3dp"
            android:src="@mipmap/ic_wallet_bankcard_nongye" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/wallet_list_bankcard_typename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国农业银行储蓄卡"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/wallet_list_bankcard_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_14"
                android:text="****5874"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_16" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可转账、可查询订单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:text="备注银行卡"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
