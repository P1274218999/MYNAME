<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/gaode_map_find_order_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/receiving_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <com.dhht.sld.utlis.IconFontView
                android:id="@+id/find_order_detail_content_icon"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="@dimen/sp_26"
                android:text="@string/icon_quhuo"/>
            <TextView
                android:id="@+id/find_order_detail_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:text="等待取货中..."/>

        </LinearLayout>

        <include layout="@layout/common_show_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/find_order_user_avatar"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/default_user_img"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/sp_12"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="张三"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/find_order_detail_article_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_gravity="center"
                    android:text="其他"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"/>

            </LinearLayout>

           <com.dhht.sld.utlis.IconFontView
               android:id="@+id/find_order_detail_call_phone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/icon_phone"
               android:textSize="@dimen/sp_28"
               android:textColor="@color/blue"/>
        </LinearLayout>


        <include layout="@layout/common_show_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_10">


        </LinearLayout>

    </LinearLayout>

</LinearLayout>