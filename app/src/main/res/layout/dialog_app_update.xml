<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_320"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/img_dialog_update_app_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_110"
        android:gravity="center"
        android:text="发现新版本"
        android:textColor="#ffff9d1f"
        android:textSize="@dimen/sp_20" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:scrollbars="none">

        <TextView
            android:id="@+id/app_update_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:text="1.界面全新改版\n2.增加了用户体验功能\n3.界面全新改版"
            android:textColor="@color/black6"
            android:textSize="@dimen/sp_14" />
    </ScrollView>
        <Button
            android:id="@+id/app_update_btn"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_dialog_update_app_btn"
            android:text="立即更新"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:textSize="19sp"
            android:visibility="visible"/>

    <com.dhht.sld.utlis.view.ProgressView
        android:id="@+id/progress_view"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_40"
        app:pvFontSize="12"
        app:pvHeight="20"
        app:pvVSpace="5"
        app:pvValue="0"
        tools:ignore="MissingPrefix"
        android:visibility="gone"/>

</LinearLayout>